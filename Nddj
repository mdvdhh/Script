local function styleInput(tb, place)
	tb.BackgroundColor3 = Color3.fromRGB(24,24,26)
	tb.BorderSizePixel = 0
	tb.Size = UDim2.new(0,86,0,38)
	tb.Font = Enum.Font.Gotham
	tb.TextColor3 = Color3.fromRGB(230,230,230)
	tb.PlaceholderColor3 = Color3.fromRGB(150,150,150)
	tb.PlaceholderText = place or ""
	local c = Instance.new("UICorner", tb)
	c.CornerRadius = UDim.new(0,5)
end

X.Name = "X"
X.Parent = Reacch
