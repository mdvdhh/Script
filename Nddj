Activ1.Name = "Activ1"
Activ1.Parent = Reacch
Activ1.BackgroundColor3 = Color3.fromRGB(40,120,220)
Activ1.Position = UDim2.new(0.55,0,0.62,0)
Activ1.Size = UDim2.new(0,136,0,36)
Activ1.Font = Enum.Font.GothamBold
Activ1.Text = "Ball Reach"
Activ1.TextColor3 = Color3.fromRGB(255,255,255)
Activ1.TextScaled = true
local a1corner = Instance.new("UICorner", Activ1)
a1corner.CornerRadius = UDim.new(0,5)
Activ1.MouseButton1Click:Connect(function()
	pcall(function()
		local tool = game.Players.LocalPlayer.Character:FindFirstChildOfClass("Tool")
		if tool and tool:FindFirstChild("Handle") then
			local box1 = Instance.new("SelectionSphere")
			box1.Parent = tool.Handle
			box1.Adornee = tool.Handle
			box1.Color3 = Color3.fromRGB(tonumber(Red.Text) or 255, tonumber(Green.Text) or 255, tonumber(Blue.Text) or 255)
			local tnum = tonumber(Transparent.Text) or 0.7
			box1.Transparency = tnum
			box1.SurfaceTransparency = tnum
			tool.Handle.Shape = Enum.PartType.Ball
			tool.Handle.Size = Vector3.new(tonumber(X.Text) or 1, tonumber(Y.Text) or 1, tonumber(Z.Text) or 1)
			tool.Handle.Massless = true
		end
	end)
end)

Activ.Name = "Activ"
Activ.Parent = Reacch
Activ.BackgroundColor3 = Color3.fromRGB(60,160,80)
Activ.Position = UDim2.new(0.55,0,0.76,0)
Activ.Size = UDim2.new(0,136,0,36)
Activ.Font = Enum.Font.GothamBold
Activ.Text = "Block Reach"
Activ.TextColor3 = Color3.fromRGB(255,255,255)
Activ.TextScaled = true
local a2corner = Instance.new("UICorner", Activ)
a2corner.CornerRadius = UDim.new(0,5)
Activ.MouseButton1Click:Connect(function()
	pcall(function()
		local tool = game.Players.LocalPlayer.Character:FindFirstChildOfClass("Tool")
		if tool and tool:FindFirstChild("Handle") then
			local box = Instance.new("SelectionBox")
			box.Parent = tool.Handle
			box.Adornee = tool.Handle
			box.Color3 = Color3.fromRGB(tonumber(Red.Text) or 255, tonumber(Green.Text) or 255, tonumber(Blue.Text) or 255)
			local tnum = tonumber(Transparent.Text) or 0.7
			box.Transparency = tnum
			tool.Handle.Shape = Enum.PartType.Block
			tool.Handle.Size = Vector3.new(tonumber(X.Text) or 1, tonumber(Y.Text) or 1, tonumber(Z.Text) or 1)
			tool.Handle.Massless = true
		end
	end)
end)

Boxtr.Name = "Boxtr"
Boxtr.Parent = Reacch
Boxtr.Position = UDim2.new(0.04,0,0.84,0)
Boxtr.Size = UDim2.new(0,170,0,30)
