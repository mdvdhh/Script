-- Sidebar buttons (Home, Reach, Remove)
local function styleSidebarButton(btn)
	btn.BackgroundColor3 = Color3.fromRGB(27,27,29)
	btn.BorderSizePixel = 0
	btn.Size = UDim2.new(1,-12,0,44)
	btn.AutoButtonColor = true
	btn.Font = Enum.Font.Gotham
	btn.TextColor3 = Color3.fromRGB(230,230,230)
	btn.TextScaled = true
	btn.TextWrapped = true
	btn.LayoutOrder = 1

	local c = Instance.new("UICorner", btn)
	c.CornerRadius = UDim.new(0,5)

	local s = Instance.new("UIStroke", btn)
	s.Thickness = 1
	s.Transparency = 0.85
end

Home.Name = "Home"
Home.Parent = LeftPanel
Home.Text = "Home"
styleSidebarButton(Home)
Home.LayoutOrder = 1
Home.MouseButton1Click:Connect(function()
	ho.Visible = true
	Reacch.Visible = false
end)

Reach.Name = "Reach"
Reach.Parent = LeftPanel
Reach.Text = "Reach"
styleSidebarButton(Reach)
Reach.LayoutOrder = 2
Reach.MouseButton1Click:Connect(function()
	ho.Visible = false
	Reacch.Visible = true
end)

Removegui.Name = "Remove gui"
Removegui.Parent = LeftPanel
Removegui.Text = "Remove"
Removegui.BackgroundColor3 = Color3.fromRGB(200,60,60)
Removegui.TextColor3 = Color3.fromRGB(20,20,20)
styleSidebarButton(Removegui)
Removegui.LayoutOrder = 3
Removegui.MouseButton1Click:Connect(function()
	Reachgui:Destroy()
end)

