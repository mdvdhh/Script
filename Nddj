ClearB.Name = "Clear B"
ClearB.Parent = Reacch
ClearB.BackgroundColor3 = Color3.fromRGB(200,80,80)
ClearB.Position = UDim2.new(0.55,0,0.84,0)
ClearB.Size = UDim2.new(0,136,0,36)
ClearB.Font = Enum.Font.GothamBold
ClearB.Text = "Clear Boxes"
ClearB.TextColor3 = Color3.fromRGB(255,255,255)
ClearB.TextScaled = true
local clear_corner = Instance.new("UICorner", ClearB)
clear_corner.CornerRadius = UDim.new(0,5)
ClearB.MouseButton1Click:Connect(function()
	pcall(function()
		local tool = game.Players.LocalPlayer.Character:FindFirstChildOfClass("Tool")
		if tool and tool:FindFirstChild("Handle") then
			if tool.Handle:FindFirstChildOfClass("SelectionBox") then
				tool.Handle:FindFirstChildOfClass("SelectionBox"):Destroy()
			end
			if tool.Handle:FindFirstChildOfClass("SelectionSphere") then
				tool.Handle:FindFirstChildOfClass("SelectionSphere"):Destroy()
			end
		end
	end)
end)

-- Open button (when closed)
Open.Name = "Open"
Open.Parent = Reachgui
Open.BackgroundColor3 = Color3.fromRGB(18,18,20)
Open.Position = UDim2.new(0,8,0.42,0)
Open.Size = UDim2.new(0,92,0,48)
Open.Font = Enum.Font.GothamBold
Open.Text = "Open"
Open.TextColor3 = Color3.fromRGB(235,235,235)
Open.TextScaled = true
local open_corner = Instance.new("UICorner", Open)
open_corner.CornerRadius = UDim.new(0,5)
Open.Visible = false
Open.MouseButton1Click:Connect(function()
	Open.Visible = false
	Drag.Visible = true
end)

-- Minimize toggle
local collapsed = false
TitleMinimize.MouseButton1Click:Connect(function()
	if not collapsed then
		MainFrame.Visible = false
		Drag.Size = UDim2.new(0,420,0,36)
		collapsed = true
	else
		MainFrame.Visible = true
		Drag.Size = UDim2.new(0,420,0,240)
		collapsed = false
	end
end)
